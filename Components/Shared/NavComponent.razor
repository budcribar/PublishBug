<nav class="navbar navbar-default" style='border: none;'>
    <div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="main-menu narrow-menu" id="bs-example-navbar-collapse-1" style='padding-top: 0;'>
            <div class="logo-container" aria-hidden="true">
                <img href="/" id="logo" src='data:image/png;base64,' style="width: 100%; padding-left: 1em;">
            </div>

            <ul class="main-menu-nav">
                <li class=@("nav-item" + NavigationManager.Uri =="" ? "active" : "" )>
                    <a role="button" class="standard-menu-item" @onclick='() => NavigationManager.NavigateTo("")'>
                        <span class="nav-text">@Localizer.STR_BUTTON_MAIN_MENU</span>
                    </a>
                </li>
                <li class=@("nav-item" + NavigationManager.Uri == "/systeminformation" ? "active" : "")>
                    <a role="button" class="standard-menu-item" @onclick='() => NavigationManager.NavigateTo("systeminformation")'>
                        <span class="nav-text">@Localizer.STR_SYSINFO_TITLE</span>
                    </a>
                </li>
                <li class=@("nav-item" + NavigationManager.Uri == "/systemTests" ? "active" : "")>
                    <a role="button" class="standard-menu-item" @onclick='() => NavigationManager.NavigateTo("systemTests")'>
                        <span class="nav-text">@Localizer.STR_BUTTON_SYSTEM_TESTS</span>
                    </a>
                </li>
                <li class=@("nav-item" + NavigationManager.Uri == "/componentTests" ? "active" : "")>
                    <a role="button" class="standard-menu-item" @onclick='() => NavigationManager.NavigateTo("componentTests")'>
                        <span class="nav-text">@Localizer.STR_BUTTON_COMPONENT_TESTS</span>
                    </a>
                </li>
                <li class=@("nav-item" + NavigationManager.Uri == "/logs" ? "active" : "")>
                    <a role="button" class="standard-menu-item" @onclick='() => NavigationManager.NavigateTo("logs")'>
                        <span class="nav-text">@Localizer.STR_BUTTON_TEST_LOGS</span>
                    </a>
                </li>
                <li class=@("nav-item" + NavigationManager.Uri == "/language" ? "active" : "")>
                    <a role="button" class="standard-menu-item" @onclick='() => NavigationManager.NavigateTo("language")'>
                        <span class="nav-text">@Localizer.STR_TITLE_LANGUAGE_SELECTION</span>
                    </a>
                </li>
                <li class=@("nav-item" + NavigationManager.Uri == "/taskscheduler" ? "active" : "")>
                    <a role="button" class="standard-menu-item" @onclick='() => NavigationManager.NavigateTo("taskscheduler")'>
                        <span class="nav-text">@Localizer.TS_AutomatedScans</span>
                    </a>
                </li>
                <li class=@("nav-item" + NavigationManager.Uri == "/customerfeedback" ? "active" : "")>
                    <a role="button" class="standard-menu-item" @onclick='() => NavigationManager.NavigateTo("customerfeedback")'>
                        <span class="nav-text">@Localizer.STR_CUSTOMER_FEEDBACK_TITLE</span>
                    </a>
                </li>
                @if(Settings.ServerUrl != null || true) {
                <li class=@("nav-item" + NavigationManager.Uri == "/regression" ? "active" : "")>
                    <a role="button" class="standard-menu-item" @onclick='() => NavigationManager.NavigateTo("regression")'>
                        <span class="nav-text">Regression Tests</span>
                    </a>
                </li>
                }
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

  @code {
      
    protected override void OnInitialized()
    {
       LocalizeContext.PropertyChanged += (sender, args) => StateHasChanged();
    }

    public void Dispose()
    {
        LocalizeContext.PropertyChanged -= (sender, args) => StateHasChanged();
    }
  }